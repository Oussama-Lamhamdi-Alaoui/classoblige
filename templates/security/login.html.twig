{% extends 'base.html.twig' %}

{% block title %}Log in | Class Oblige{% endblock %}


{% block body %}
<style>
    .container-fluid {
        position: relative;
        padding: 0;
    }

    .banner-container {
        width: 100%;
        text-align: center;
    }

    .banner-men-polos {
        background: url("../img/banners/banner-user-login.jpg") no-repeat center center;
        background-size: auto;
        padding: 0 0 400px 0;
        filter: brightness(50%);
    }

    .text-banner {
        text-shadow: #000000 0em 0em 0.2em;
        position: absolute;
        bottom: 50%;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        text-align: center;
        color: #F5F5F5;
    }

    img {
        max-width: 100%;
    }

    .text-nowrap {
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }
        
    .standard-price {
        text-decoration: line-through;
    }
</style>

<div class="container-fluid">
    <div class="banner-container">
        <div class="banner-men-polos"></div>
        <div class="text-banner">
            <h1 class="text-white">Log In</h1>
            <h5 class="text-white">Start shopping for the classiest attire ever.</h5>
        </div>
    </div>
</div>

<div class="container-fluid bg-light mb-2">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Login</a></li>
        </ol>
    </div>
</div>

<div class="container">
    <div class="row p-5">
        <div class="col-md-7 pr-5">
            <form method="post">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {#
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                #}


                <div class="form-group">
                    <label for="input-email">Email Address</label>
                    <input type="email" value="{{ last_username }}" name="email" id="input-email" class="form-control" required autofocus>
                </div>
                
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                <div class="form-group checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}                
                
                <div class="form-group text-center mt-4">
                    <button class="btn btn-success" type="submit">
                        Sign in!
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-5 list-group">
            <div class="list-group-item list-group-item-action active bg-dark text-white">
                Why Sign Up?
            </div>
            <div class="list-group-item list-group-item-action">
                &#9830; Check out faster
            </div>
            <div class="list-group-item list-group-item-action">
                &#9830; Save shipping address
            </div>
            <div class="list-group-item list-group-item-action">
                &#9830; Access your order history
            </div>
            <div class="list-group-item list-group-item-action">
                &#9830; Save items to your wish list
            </div>
            <div class="list-group-item list-group-item-action text-center">
                <a href="{{ path('app_signup') }}"><button class="btn btn-primary">Sign Up</button></a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
