{% extends 'base.html.twig' %}

{% block title %}Cart | Class Oblige{% endblock %}

{% block body %}

<style>
    .container-fluid {
        position: relative;
        padding: 0;
    }

    .banner-container {
        width: 100%;
        text-align: center;
    }

    .banner-men-polos {
        background: url("../img/banners/banner-item-cart.jpg") no-repeat center center;
        background-size: auto;
        padding: 0 0 400px 0;
        filter: brightness(50%);
    }

    .text-banner {
        text-shadow: #000000 0em 0em 0.2em;
        position: absolute;
        bottom: 50%;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        text-align: center;
        color: #F5F5F5;
    }

    img {
        max-width: 100%;
    }

    .text-nowrap {
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }
        
    .standard-price {
        text-decoration: line-through;
    }
</style>

<div class="container-fluid">
    <div class="banner-container">
        <div class="banner-men-polos"></div>
        <div class="text-banner">
            <h1 class="text-white">Payment</h1>
        </div>
    </div>
</div>

<div class="container-fluid bg-light mb-2">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_cart_view') }}">Cart</a></li>
            <li class="breadcrumb-item active">Payment</li>
        </ol>
    </div>
</div>

<div class="container pt-5">
    <h1 class="h3 mb-0 text-gray-800 text-center mb-5">Choose Payment Method</h1>
    <ul class="nav nav-tabs">
        <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#cash">Cash</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#cheque">Cheque</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#transfer">Transfer</a>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content pt-4">
        <div class="tab-pane fade active show" id="cash">
            <h5 class="mb-4">If your order total payment is less than 6000 MAD you're able to pay by cash on delivery.</h5>
            <div class="text-center">
                <label class="form-control" for="input-salary">Your Total {{ total }} MAD</label>
                {{ form_start(cashForm) }}
                    {{ form_widget(cashForm.submitcash) }}
                {{ form_end(cashForm) }}
            </div>
        </div>
        <div class="tab-pane fade show" id="cheque">
            <h5 class="mb-4">To pay using a cheque make a scanned copy and upload it using the form below.</h5>
            <div class="text-center">
                <label class="form-control" for="input-salary">Your Total {{ total }} MAD</label>
            
            {{ form_start(chequeForm) }}
            <div class="form-group">
                <label for="input-scan">Cheque Scan</label>
                <div class="custom-file">                    
                    {{ form_widget(chequeForm.scancheque) }}
                    <label class="custom-file-label" for="input-scan">Enter Valid PDF</label>
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(chequeForm.submitcheque) }}
            </div>
            {{ form_end(chequeForm) }}
            </div>
        </div>
        <div class="tab-pane fade show" id="transfer">
        <h5 class="mb-4">To pay using a ban transfer please upload the transfer receipt using the form below.</h5>
        <div class="text-center">
            <label class="form-control" for="input-salary">Your Total {{ total }} MAD</label>
            {{ form_start(transferForm) }}
            <div class="form-group">
                <label for="input-scan">Transfer Scan</label>
                <div class="custom-file">                    
                    {{ form_widget(transferForm.scantransfer) }}
                    <label class="custom-file-label" for="input-scan">Enter Valid PDF</label>
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(transferForm.submittransfer) }}
            </div>
            {{ form_end(transferForm) }}        
        </div>
    </div>
</div>

{% endblock %}
