{% extends 'base.html.twig' %}

{% block title %}Success | Class Oblige{% endblock %}

{% block body %}

<style>
    .container-fluid {
        position: relative;
        padding: 0;
    }

    .banner-container {
        width: 100%;
        text-align: center;
    }

    .banner-men-polos {
        background: url("../img/banners/banner-item-cart.jpg") no-repeat center center;
        background-size: auto;
        padding: 0 0 400px 0;
        filter: brightness(50%);
    }

    .text-banner {
        text-shadow: #000000 0em 0em 0.2em;
        position: absolute;
        bottom: 50%;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        text-align: center;
        color: #F5F5F5;
    }

    img {
        max-width: 100%;
    }

    .text-nowrap {
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }
        
    .standard-price {
        text-decoration: line-through;
    }
</style>

<div class="container-fluid">
    <div class="banner-container">
        <div class="banner-men-polos"></div>
        <div class="text-banner">
            <h1 class="text-white">Success</h1>
        </div>
    </div>
</div>

<div class="container-fluid bg-light mb-2">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_cart_view') }}">Cart</a></li>
            <li class="breadcrumb-item active">Success</li>
        </ol>
    </div>
</div>

<div class="container pt-5">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Success</h1>
        <a href="{{ asset('uploads/receipts/' ~ receipt) }}" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm">View Receipt</a>
    </div>
    <p>Your order has been successfuly proccessed, please await delivery</p>
</div>

{% endblock %}
